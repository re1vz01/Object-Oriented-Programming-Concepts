// Basically encapsulation is making method and variables into private.
// To access it you must have getter and setters method.


File: Test.java
public class Test{
  public static void main(String[] args) {

          Student student = new Student();
          student.setName("Reivin");
          student.setAge(25);

          System.out.println(student.getName() + " is " + student.getAge() + " years old." );

      }
}

File: Student.java
public class Student {
    private String name;
    private int age;

    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    public int getAge() {
        return age;
    }

    public void setAge(int age) {
        this.age = age;
    }
}
